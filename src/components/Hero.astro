<section class="hero">
  <div class="hero-content">
    <h1 class="hero-title">Crafting Exceptional Outdoor Spaces</h1>
    <p class="hero-subtitle">
      Built to Endure Alaska's Beauty
    </p>
    <p class="hero-description">
      Premium deck construction, exterior renovations, and expert general contracting for Anchorage homeowners
    </p>
    <div class="hero-ctas">
      <a href="#" class="btn btn-primary">View Our Work</a>
      <a href="#" class="btn btn-secondary">Get a Quote</a>
    </div>
  </div>
  <div class="hero-visual">
    <div class="hero-accent"></div>
  </div>
</section>

<style>
  .hero {
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 80px 40px;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: white;
    overflow: hidden;
    position: relative;
  }

  .hero-content {
    flex: 1;
    max-width: 600px;
    z-index: 2;
  }

  .hero-title {
    margin: 0 0 16px 0;
    font-size: 52px;
    font-weight: 800;
    line-height: 1.2;
    letter-spacing: -1px;
  }

  .hero-subtitle {
    margin: 0 0 24px 0;
    font-size: 24px;
    font-weight: 600;
    color: #94a3b8;
  }

  .hero-description {
    margin: 0 0 40px 0;
    font-size: 16px;
    line-height: 1.6;
    color: #cbd5e1;
    max-width: 500px;
  }

  .hero-ctas {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .btn {
    padding: 12px 32px;
    border-radius: 6px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
    display: inline-block;
  }

  .btn-primary {
    background: #16a34a;
    color: white;
  }

  .btn-primary:hover {
    background: #15803d;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border-color: white;
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .hero-visual {
    flex: 1;
    position: relative;
    height: 500px;
    margin-left: 60px;
  }

  .hero-accent {
    position: absolute;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 30% 50%, rgba(22, 163, 74, 0.15), transparent 70%);
    border-radius: 20px;
    border: 2px solid rgba(22, 163, 74, 0.2);
  }

  @media (max-width: 1024px) {
    .hero {
      flex-direction: column;
      padding: 60px 30px;
      min-height: auto;
    }

    .hero-visual {
      margin-left: 0;
      margin-top: 40px;
      height: 300px;
    }

    .hero-title {
      font-size: 40px;
    }

    .hero-subtitle {
      font-size: 20px;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding: 40px 20px;
    }

    .hero-title {
      font-size: 28px;
    }

    .hero-subtitle {
      font-size: 16px;
    }

    .hero-description {
      font-size: 14px;
    }

    .btn {
      padding: 10px 24px;
      font-size: 14px;
    }

    .hero-ctas {
      flex-direction: column;
    }

    .hero-visual {
      display: none;
    }
  }
</style>
